  1N = 2--4!s, 5!h, 1--3!d, 1--3!c, 16--20 HCP
  2C = 4+!c, 16--20 HCP
  2D = 4+!d, 16--20 HCP
  2H = 6+!h, 16--20 HCP
  2N = 2--4!s, 2--4!h, 2--5!d, 2--5!c, 22--23 HCP
